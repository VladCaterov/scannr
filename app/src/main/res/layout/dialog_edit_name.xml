<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/editNameDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:width="250dp"
        android:text="@string/edit_name"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editFNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/first_name_label"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/fName"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/first_name"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/mInitial"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameDialogText"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/editMInitialLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/middle_initial_label"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/editLNameLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editFNameLabel" />

    <EditText
        android:id="@+id/mInitial"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/middle_initial"
        android:inputType="text"
        android:maxLength="1"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@id/lName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fName" />

    <TextView
        android:id="@+id/editLNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/last_name_label"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/lName"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/last_name"
        android:inputType="text"
        android:minHeight="48dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mInitial"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>

