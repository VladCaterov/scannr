<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scannr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/primaryDark</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Scannr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--custom buttons-->
    <style name="button.SolidWhite" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button.BorderWhite" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:strokeColor">@color/white</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button.BorderGray" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:strokeColor">@color/gray</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Scannr.Button.BorderWhite" parent="Theme.Scannr.NoActionBar">
        <item name="android:buttonStyle">@style/button.BorderWhite</item>
    </style>
    <style name="Theme.Scannr.Button.SolidWhite" parent="Theme.Scannr.NoActionBar">
        <item name="android:buttonStyle">@style/button.SolidWhite</item>
    </style>
    <style name="Theme.Scannr.Button.BorderGray" parent="Theme.Scannr.NoActionBar">
        <item name="android:buttonStyle">@style/button.BorderGray</item>
    </style>

    <style name="Theme.Scannr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Scannr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>